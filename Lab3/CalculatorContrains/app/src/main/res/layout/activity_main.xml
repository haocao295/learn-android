<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/txtResult"
        android:layout_width="match_parent"
        android:layout_height="50pt"
        android:background="#909090"
        android:gravity="center_vertical|right"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="0"
        android:textColor="#FFFFFF"
        android:textSize="20pt"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint1"
        android:layout_width="match_parent"
        android:layout_height="50pt"
        app:layout_constraintTop_toBottomOf="@+id/txtResult"
        android:layout_marginTop="10dp"
        >

        <Button
            android:id="@+id/btnMCong"
            android:layout_width="0dp"
            android:layout_height="45pt"
            android:backgroundTint="@color/btnCalculator"
            android:text="M+"
            android:textColor="@color/btnMem"
            android:textSize="14pt"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/btnMTru"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btnMTru"
            android:layout_width="0dp"
            android:layout_height="45pt"
            android:layout_marginStart="25dp"
            android:backgroundTint="@color/btnCalculator"
            android:text="M-"
            android:textColor="@color/btnMem"
            android:textSize="14pt"

            app:layout_constraintLeft_toRightOf="@+id/btnMCong"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btnMC"
            android:layout_width="0dp"
            android:layout_height="45pt"
            android:layout_marginStart="25dp"
            android:backgroundTint="@color/btnCalculator"
            android:text="MC"

            android:textColor="@color/btnMem"
            android:textSize="14pt"
            app:layout_constraintLeft_toRightOf="@+id/btnMTru"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btnAC"
            android:layout_width="0dp"
            android:layout_height="45pt"
            android:layout_marginStart="25dp"
            android:backgroundTint="@color/btnCalculator"
            android:text="AC"
            android:textColor="@color/btnAC"
            android:textSize="14pt"
            app:layout_constraintLeft_toRightOf="@+id/btnMC"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint2"
        android:layout_width="match_parent"
        android:layout_height="50pt"
        app:layout_constraintTop_toBottomOf="@+id/constraint1"
        >

        <Button
            android:id="@+id/btnMCong"
            android:layout_width="0dp"
            android:layout_height="45pt"
            android:backgroundTint="@color/btnCalculator"
            android:text="7"
            android:textColor="@color/black"
            android:textSize="14pt"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/btnMTru"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btnMTru"
            android:layout_width="0dp"
            android:layout_height="45pt"
            android:layout_marginStart="25dp"
            android:backgroundTint="@color/btnCalculator"
            android:text="8"
            android:textColor="@color/black"
            android:textSize="14pt"

            app:layout_constraintLeft_toRightOf="@+id/btnMCong"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btnMC"
            android:layout_width="0dp"
            android:layout_height="45pt"
            android:layout_marginStart="25dp"
            android:backgroundTint="@color/btnCalculator"
            android:text="9"

            android:textColor="@color/black"
            android:textSize="14pt"
            app:layout_constraintLeft_toRightOf="@+id/btnMTru"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btnAC"
            android:layout_width="0dp"
            android:layout_height="45pt"
            android:layout_marginStart="25dp"
            android:backgroundTint="@color/btnCalculator"
            android:text="/"
            android:textColor="@color/btnMath"
            android:textSize="14pt"
            app:layout_constraintLeft_toRightOf="@+id/btnMC"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint3"
        android:layout_width="match_parent"
        android:layout_height="50pt"
        app:layout_constraintTop_toBottomOf="@+id/constraint2"
        >

        <Button
            android:id="@+id/btnMCong"
            android:layout_width="0dp"
            android:layout_height="45pt"
            android:backgroundTint="@color/btnCalculator"
            android:text="4"
            android:textColor="@color/black"
            android:textSize="14pt"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/btnMTru"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btnMTru"
            android:layout_width="0dp"
            android:layout_height="45pt"
            android:layout_marginStart="25dp"
            android:backgroundTint="@color/btnCalculator"
            android:text="5"
            android:textColor="@color/black"
            android:textSize="14pt"

            app:layout_constraintLeft_toRightOf="@+id/btnMCong"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btnMC"
            android:layout_width="0dp"
            android:layout_height="45pt"
            android:layout_marginStart="25dp"
            android:backgroundTint="@color/btnCalculator"
            android:text="6"

            android:textColor="@color/black"
            android:textSize="14pt"
            app:layout_constraintLeft_toRightOf="@+id/btnMTru"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btnAC"
            android:layout_width="0dp"
            android:layout_height="45pt"
            android:layout_marginStart="25dp"
            android:backgroundTint="@color/btnCalculator"
            android:text="x"
            android:textColor="@color/btnMath"
            android:textSize="14pt"
            app:layout_constraintLeft_toRightOf="@+id/btnMC"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint4"
        android:layout_width="match_parent"
        android:layout_height="50pt"
        app:layout_constraintTop_toBottomOf="@+id/constraint3"
        >

        <Button
            android:id="@+id/btnMCong"
            android:layout_width="0dp"
            android:layout_height="45pt"
            android:backgroundTint="@color/btnCalculator"
            android:text="1"
            android:textColor="@color/black"
            android:textSize="14pt"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/btnMTru"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btnMTru"
            android:layout_width="0dp"
            android:layout_height="45pt"
            android:layout_marginStart="25dp"
            android:backgroundTint="@color/btnCalculator"
            android:text="2"
            android:textColor="@color/black"
            android:textSize="14pt"

            app:layout_constraintLeft_toRightOf="@+id/btnMCong"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btnMC"
            android:layout_width="0dp"
            android:layout_height="45pt"
            android:layout_marginStart="25dp"
            android:backgroundTint="@color/btnCalculator"
            android:text="3"
            android:textColor="@color/black"
            android:textSize="14pt"
            app:layout_constraintLeft_toRightOf="@+id/btnMTru"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btnAC"
            android:layout_width="0dp"
            android:layout_height="45pt"
            android:layout_marginStart="25dp"
            android:backgroundTint="@color/btnCalculator"
            android:text="-"
            android:textColor="@color/btnMath"
            android:textSize="14pt"
            app:layout_constraintLeft_toRightOf="@+id/btnMC"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint5"
        android:layout_width="match_parent"
        android:layout_height="46pt"
        app:layout_constraintTop_toBottomOf="@+id/constraint4"
        >

        <Button
            android:id="@+id/btnMCong"
            android:layout_width="0dp"
            android:layout_height="45pt"
            android:backgroundTint="@color/btnCalculator"
            android:text="0"
            android:textColor="@color/btnMem"
            android:textSize="14pt"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/btnMTru"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btnMTru"
            android:layout_width="0dp"
            android:layout_height="45pt"
            android:layout_marginStart="25dp"
            android:backgroundTint="@color/btnCalculator"
            android:text="."
            android:textColor="@color/btnMath"
            android:textSize="14pt"

            app:layout_constraintLeft_toRightOf="@+id/btnMCong"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btnMC"
            android:layout_width="0dp"
            android:layout_height="45pt"
            android:layout_marginStart="25dp"
            android:backgroundTint="@color/btnCalculator"
            android:text="="

            android:textColor="@color/btnMath"
            android:textSize="14pt"
            app:layout_constraintLeft_toRightOf="@+id/btnMTru"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btnAC"
            android:layout_width="0dp"
            android:layout_height="45pt"
            android:layout_marginStart="25dp"
            android:backgroundTint="@color/btnCalculator"
            android:text="+"
            android:textColor="@color/btnMath"
            android:textSize="14pt"
            app:layout_constraintLeft_toRightOf="@+id/btnMC"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>