<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5pt"
    tools:context=".MainActivity">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <TextView
            android:id="@+id/txtResult"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_span="4"
            android:layout_weight="1"
            android:background="#909090"
            android:gravity="center_vertical|right"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="0"
            android:textColor="#FFFFFF"
            android:textSize="20pt"

            />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"

        >

        <Button
            android:id="@+id/btnMA"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:backgroundTint="@color/btnCalculator"
            android:text="M+"
            android:textColor="@color/btnMem"
            android:textSize="14pt"
            />

        <Button
            android:id="@+id/btnMS"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:backgroundTint="@color/btnCalculator"
            android:text="M-"
            android:textColor="@color/btnMem"
            android:textSize="14pt"
            />

        <Button
            android:id="@+id/btnMC"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:backgroundTint="@color/btnCalculator"
            android:text="Mc"
            android:textColor="@color/btnMem"
            android:textSize="14pt"
            />

        <Button
            android:id="@+id/btnAC"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:backgroundTint="@color/btnCalculator"
            android:text="AC"
            android:textColor="@color/btnAC"
            android:textSize="14pt"
            />


    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"

        >

        <Button
            android:id="@+id/btNum7"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:backgroundTint="@color/btnCalculator"
            android:layout_weight="1"
            android:text="7"
            android:textColor="@color/black"
            android:textSize="14pt" />

        <Button
            android:id="@+id/btnNum8"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:backgroundTint="@color/btnCalculator"
            android:layout_weight="1"
            android:text="8"
            android:textColor="@color/black"
            android:textSize="14pt" />

        <Button
            android:id="@+id/btnNum9"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:backgroundTint="@color/btnCalculator"
            android:layout_weight="1"
            android:text="9"
            android:textColor="@color/black"
            android:textSize="14pt" />

        <Button
            android:id="@+id/btnDivide"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:backgroundTint="@color/btnCalculator"
            android:layout_weight="1"
            android:text="/"
            android:textColor="@color/btnMath"
            android:textSize="14pt" />


    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"

        >

        <Button
            android:id="@+id/btNum4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:backgroundTint="@color/btnCalculator"
            android:layout_weight="1"
            android:text="4"
            android:textColor="@color/black"
            android:textSize="14pt" />

        <Button
            android:id="@+id/btnNum5"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:text="5"
            android:textColor="@color/black"
            android:backgroundTint="@color/btnCalculator"
            android:textSize="14pt" />

        <Button
            android:id="@+id/btnNum6"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:backgroundTint="@color/btnCalculator"
            android:layout_weight="1"
            android:text="6"
            android:textColor="@color/black"
            android:textSize="14pt" />

        <Button
            android:id="@+id/btnMuntiply"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:backgroundTint="@color/btnCalculator"
            android:layout_weight="1"
            android:text="x"
            android:textColor="@color/btnMath"
            android:textSize="14pt" />


    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"

        >

        <Button
            android:id="@+id/btNum1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:backgroundTint="@color/btnCalculator"
            android:layout_weight="1"
            android:text="1"
            android:textColor="@color/black"
            android:textSize="14pt" />

        <Button
            android:id="@+id/btnNum2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:text="2"
            android:textColor="@color/black"
            android:backgroundTint="@color/btnCalculator"
            android:textSize="14pt" />

        <Button
            android:id="@+id/btnNum3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:backgroundTint="@color/btnCalculator"
            android:layout_weight="1"
            android:text="3"
            android:textColor="@color/black"
            android:textSize="14pt" />

        <Button
            android:id="@+id/btnSubtract"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:backgroundTint="@color/btnCalculator"
            android:layout_weight="1"
            android:text="-"
            android:textColor="@color/btnMath"
            android:textSize="14pt" />


    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"

        >

        <Button
            android:id="@+id/btNum0"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:backgroundTint="@color/btnCalculator"
            android:layout_weight="1"
            android:text="0"
            android:textColor="@color/black"
            android:textSize="14pt" />

        <Button
            android:id="@+id/btnDecPoint"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:backgroundTint="@color/btnCalculator"
            android:layout_weight="1"
            android:text="."
            android:textColor="@color/black"
            android:textSize="14pt" />

        <Button
            android:id="@+id/btnCalculate"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:backgroundTint="@color/btnCalculator"
            android:layout_weight="1"
            android:text="="
            android:textColor="@color/btnMath"
            android:textSize="14pt" />

        <Button
            android:id="@+id/btnAdd"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:backgroundTint="@color/btnCalculator"
            android:layout_weight="1"
            android:text="/"
            android:textColor="@color/btnMath"
            android:textSize="14pt" />


    </TableRow>


</TableLayout>